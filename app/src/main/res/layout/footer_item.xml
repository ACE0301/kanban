<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_tiny_2dp"
        android:paddingLeft="@dimen/spacing_6dp"
        android:paddingRight="@dimen/spacing_6dp"
        android:paddingTop="@dimen/spacing_tiny_2dp">
    <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:duplicateParentState="true"
            android:foreground="@drawable/card_view_selector"
            card_view:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="@dimen/corner_radius_cardview"
            card_view:cardElevation="@dimen/cardview_elevation"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardUseCompatPadding="true">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_12">
            <TextView
                    android:id="@+id/tvAddCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_normal_16"
                    android:textColor="@color/fab_green"
                    android:text="@string/add_card"/>
            <LinearLayout
                    android:id="@+id/llAddNewCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                <EditText
                        android:id="@+id/etNewCardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:ems="10"
                        android:layout_weight="1"
                        tools:text="type new card name"/>
                <Button
                        android:id="@+id/btnSaveNewCard"
                        android:text="save"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>